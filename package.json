{
  "name": "lp-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack -p --progress --mode production --config ./webpack.config.js",
    "watch": "webpack -p --progress --mode production --config ./webpack.config.js -w"
  },
  "author": "hiro",
  "license": "MIT",
  "devDependencies": {
    "clean-webpack-plugin": "^3.0.0",
    "ejs": "^2.7.4",
    "ejs-html-loader": "^4.0.1",
    "html-loader": "^1.3.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.html": [
      "prettier --parser html --write"
    ],
    "**/*.ejs": [
      "prettier --parser html --write"
    ]
  }
}
