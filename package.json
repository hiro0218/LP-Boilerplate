{
  "name": "lp-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:dev && cross-env NODE_ENV=development webpack-dev-server",
    "build": "webpack -p --progress --mode production --config ./webpack.config.js",
    "build:dev": "npm run build -- --mode development",
    "watch": "webpack -p --progress --mode production --config ./webpack.config.js -w"
  },
  "author": "hiro",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.0.0",
    "cross-env": "^7.0.2",
    "css-loader": "^4.3.0",
    "ejs": "^2.7.4",
    "ejs-html-loader": "^4.0.1",
    "html-loader": "^1.3.1",
    "html-webpack-harddisk-plugin": "^1.0.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.11.2",
    "postcss": "^8.0.9",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^4.0.2",
    "postcss-nested": "^5.0.0",
    "postcss-sort-media-queries": "^1.31.21",
    "prettier": "^2.1.2",
    "stylelint": "^13.6.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "ts-loader": "^8.0.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.html": [
      "prettier --parser html --write"
    ],
    "**/*.ejs": [
      "prettier --parser html --write"
    ],
    "**/*.css": [
      "stylelint --fix"
    ]
  }
}
